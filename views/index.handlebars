<h1>Burgers!!!!</h1>
<h3>Fresh burgers</h3>

<div class="container">
    <div class="col-xs-6 text-center" class="task">
        <div class="row">
            {{#each burger_data}}
            {{#unless this.devoured}}
            <div class="col-xs-9 text-center">
                <pre>{{this.id}}. {{this.burgerName}}</pre>
            </div>
            <div class="col-xs-3 text-center">
                <form method="POST" action="/freshBurger/update?_method=PUT" class="button-size">
                    <br>
                    <button type="submit" class="btn btn-default">Devour It!</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>
    </div>

    <h2>add Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="ca">Burger: </label>
            <input type="text" id="burgerName" value="0" burgerName="name">
        </div>

        <button type="submit">Add Burger</button>
</div>
</form>