
    <h1>Burgers!!!!</h1>
    <h3>Fresh burgers</h3>

    <ul>{{#each freshBurger}}
        {{#unless devoured}}
        {{> freshBurger/burgers-block devoured=false}}
        {{/if}}
        {{/each}}
    </ul>

    <h2>add Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="ca">Burger: </label>
            <input type="text" id="burgerName" value="0" burgerName="name">
        </div>

        <button type="submit">Add Burger</button>
    </form>